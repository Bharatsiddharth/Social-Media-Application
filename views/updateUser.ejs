<%- include("./partials/header") %>

<%- include("./partials/nav") %>

    


<div class="min-h-screen flex justify-between items-start bg-white ">
    <div class="p-10 mt-[10vw] ml-[25vw] border-[1px] w-[30%] mt-10 border-slate-400 rounded-md flex flex-col items-center space-y-3">
    <div class="py-4 text-2xl flex justify-center items-center flex-col font-bold">
        
            <form class="hidden form-image" action="/image/<%= user._id%>" method="post" enctype="multipart/form-data">
            
                <input class="input-image" type="file" name="profilepic">

            </form>


            <!-- <img class="" src="https://picsum.photos/id/1027/150/150"/> -->
            <img class="preview-image h-20 w-20 my-2 rounded-full" src="/images/<%= user.profilepic%>"
            alt="">
            <h1><%= user.name %></h1>
           
    </div>

       <form class="flex flex-col gap-5" action="/update-user/<%= user._id%>" method="post">

        <input type="hidden" name="oldprofilepic" value="<%= user.profilepic %>">

        

        <input class="p-3 border-[1px] border-slate-500 rounded-sm w-80" placeholder="Enter Your Fullname" name="name" value="<%= user.name %>" />

        <input class="p-3 border-[1px] border-slate-500 rounded-sm w-80" placeholder="E-Mail or Phone number" name="email" value="<%= user.email %>"/>

        <input class="p-3 border-[1px] border-slate-500 rounded-sm w-80" placeholder="Username" name="username" value="<%= user.username %>" />
  
        <div class="flex flex-col space-y-5 w-full">
            
            <button class="w-full bg-[#0070ba] rounded-3xl p-3 text-center text-white font-bold transition duration-200 hover:bg-[#003087]">Save Update</button>

        </div>
        </div>

       </form>



       <div class="profilesetting mt-[10vw] mr-[25vw] items-center flex flex-col gap-3 ">
        <h1 class="text-[2.5vw] font-bold">Profile Setting</h1>
        <a class="text-black-400 font-semibold text-[1.5vw]" href="/reset-password/<%= user._id%>">ResetPassword</a>
        <a class="text-black-400 font-semibold text-[1.5vw]" href="/delete-user/<%= user._id%>">Delete Account</a>
       </div>

    

</div>

<script>
    const inputimage = document.querySelector(".input-image");
    const previewimage = document.querySelector(".preview-image")
    const formimage = document.querySelector(".form-image")
    previewimage.addEventListener("click", function () {
      inputimage.click()
    })
    inputimage.addEventListener("change", function () {
      formimage.submit()
    })
  </script>

  <%- include("./partials/footer") %>