<%- include("./partials/header") %>

<%- include("./partials/nav") %>

    


<div class="min-h-screen flex justify-between items-start bg-white ">
    <div class="p-10 mt-[10vw] ml-[25vw] border-[1px] w-[30%] mt-10 border-slate-400 rounded-md flex flex-col items-center space-y-3">
    <div class="py-4 text-2xl flex justify-center items-center flex-col font-bold">
        
            <form class="hidden form-image" action="/post-image/<%= post._id%>" method="post" enctype="multipart/form-data">
            
                <input class="input-image" type="file" name="media">

            </form>


            <!-- <img class="" src="https://picsum.photos/id/1027/150/150"/> -->
            <img class="preview-image h-20 w-20 my-2 rounded-full" src="/images/<%= post.media %>"
            alt="">
            <h1><%= user.name %></h1>
            <h2>@<%= user.username %></h2>
           
    </div>

    <form class="flex flex-col gap-5" action="/update-post/<%= post._id %>" method="post">
      <input class="p-3 border-[1px] border-slate-500 rounded-sm w-80" placeholder="Enter Your Fullname" name="title" value="<%= post.title %>" />
      <div class="flex flex-col space-y-5 w-full">
          <button class="w-full bg-[#0070ba] rounded-3xl p-3 text-center text-white font-bold transition duration-200 hover:bg-[#003087]">Update post details</button>
      </div>
  </form>
  

    

</div>

<script>
    const inputimage = document.querySelector(".input-image");
    const previewimage = document.querySelector(".preview-image")
    const formimage = document.querySelector(".form-image")
    previewimage.addEventListener("click", function () {
      inputimage.click()
    })
    inputimage.addEventListener("change", function () {
      formimage.submit()
    })
  </script>

  <%- include("./partials/footer") %>